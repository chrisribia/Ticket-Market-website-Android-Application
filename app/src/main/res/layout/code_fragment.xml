<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.CodeFragment.CodeFragment">

    <data>
        <variable
                name="viewmodel"
                type="co.ke.tickett.CodeViewModel" />
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_search_black_24dp"
                    android:layout_height="20dp"/>
            <EditText
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:hint="Enter Ticket Code Here?..."
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent"
                    android:text="Ticket Details" />

            <TableLayout
                    android:layout_width="match_parent"
                    android:stretchColumns="*"
                    android:padding="5dp"
                    android:layout_height="match_parent">
                <TableRow>
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:text="Ticket Type :" />
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:layout_marginBottom="5dp" />
                </TableRow>
                <TableRow>
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:text="Number of Tickets :" />
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"
                            />
                </TableRow>
                <TableRow>
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:text="Ticket Status :" />
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:id="@+id/statez"

                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent" />
                </TableRow>
                <TableRow>
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:text="Event Name :" />
                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_height="match_parent"
                             />
                </TableRow>
                <TableRow>
                    <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@android:color/white"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:text="Ticket Price :" />

                    <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="5dp"

                            android:layout_height="wrap_content" />
                </TableRow>


            </TableLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:text="Confirm"

                    android:textAllCaps="false"
                    android:id="@+id/btnCon"
                    android:textColor="@color/cardview_dark_background"
                    android:backgroundTint="@color/cardview_light_background"
                    android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</layout>