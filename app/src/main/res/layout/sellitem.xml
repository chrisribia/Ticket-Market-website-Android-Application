<?xml version="1.0" encoding="utf-8"?>


<layout
        xmlns:android="http://schemas.android.com/apk/res/android"

        >
    <data>
        <variable
                name="sell"
                type="co.ke.tickett.data.db.entity.Sell" />
    </data>
<LinearLayout
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Event Name   :  "
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_width="match_parent"
                    android:text="@{sell.event_name}"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textFontWeight="20"
                    android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Tickets Type  :  "
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_width="match_parent"
                    android:text="@{sell.ticket_type}"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textFontWeight="20"
                    android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Tickets Price  :  "
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_width="match_parent"
                    android:text="@{sell.ticket_price}"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textFontWeight="20"
                    android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow>

            <TextView
                    android:layout_width="match_parent"
                    android:text="Available Tickets   :  "
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>


            <TextView
                    android:layout_width="match_parent"
                    android:text="@{sell.available_tickets.toString()}"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textFontWeight="20"
                    android:layout_height="wrap_content"/>
        </TableRow>

    </TableLayout>

    <TextView
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"/>
</LinearLayout>
</layout>